<!-- dashboard.handlebars -->


{{#extend "main"}}

   
    {{#content "pageTitle"}}Dashboard{{/content}}


    {{#content "body"}}
        <section id="dashboard">
            <h2>Welcome to Your Dashboard, {{user.username}}!</h2>

   
            {{#if userPosts.length}}
                <h3>Your Blog Posts:</h3>
                <ul>
                    {{#each userPosts}}
                        <li>
                            <h4>{{title}}</h4>
                            <p>{{createdAt}}</p>
                            <p>{{content}}</p>
                            <a href="/post/{{id}}">Read more</a>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <p>You haven't written any blog posts yet. <a href="/new-post">Start writing now!</a></p>
            {{/if}}
        </section>
    {{/content}}

{{/extend}}